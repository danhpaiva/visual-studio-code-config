{
	"files.encoding": "utf8",
	//JetBrains Font
	"editor.fontFamily": "JetBrains Mono, Cascadia Code",
	"editor.fontSize": 14,
	"editor.letterSpacing": 1.2,
	"editor.lineHeight": 20,
	"editor.fontLigatures": true,
	//Apply vertical lines to remind you to break lines in very large codes
	"editor.rulers": [
		80,
		120
	],
	//Configures "empty folder" display
	"explorer.compactFolders": false,
	//Applies a visual signal to the left of the selected line
	"editor.renderLineHighlight": "gutter",
	//Themes
	"workbench.colorTheme": "Atom One Dark",
	"workbench.iconTheme": "material-icon-theme",
	//Others
	//Format the code whenever we save
	"editor.formatOnSave": true,
	// Always open a blank file  
	"workbench.startupEditor": "newUntitledFile",
	//Disable Mini Map
	"editor.minimap.enabled": false,
	//Indentation
	"editor.tabSize": 2,
	//Put the terminal on the right
	"workbench.panel.defaultLocation": "right",
	//Underlines the terminal cursor
	"terminal.integrated.cursorStyle": "underline",
	"terminal.integrated.fontSize": 14,
	//Enable Smart Commit from GIT
	"git.enableSmartCommit": true,
	//Enable GIT Auto Fetch
	"git.autofetch": true,
	// Disable Telemetry
	"telemetry.enableCrashReporter": false,
	"telemetry.enableTelemetry": false
}
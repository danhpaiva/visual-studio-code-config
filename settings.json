{
	//JetBrains Font
	"editor.fontFamily": "JetBrains Mono, Cascadia Code",
	"editor.fontSize": 14,
	"editor.letterSpacing": 1.2,
	"editor.lineHeight": 20,
	"editor.fontLigatures": false,
	//Apply vertical lines to remind you to break lines in very large codes
	"editor.rulers": [
		80,
		120
	],
	//Configures "empty folder" display
	"explorer.compactFolders": false,
	//Applies a visual signal to the left of the selected line
	"editor.renderLineHighlight": "gutter",
	//Themes
	"workbench.colorTheme": "One Dark Pro",
	"workbench.iconTheme": "material-icon-theme",
	//Format the code whenever we save
	"editor.formatOnSave": true,
	// Always open a blank file  
	"workbench.startupEditor": "newUntitledFile",
	//Disable Mini Map
	"editor.minimap.enabled": false,
	//Indentation
	"editor.tabSize": 2,
	//Put the terminal on the right
	"workbench.panel.defaultLocation": "right",
	//Underlines the terminal cursor
	"terminal.integrated.cursorStyle": "underline",
	"terminal.integrated.fontSize": 14,
	//Enable Smart Commit from GIT
	"git.enableSmartCommit": true,
	//Enable GIT Auto Fetch
	"git.autofetch": true,
	//Disable Telemetry
	"telemetry.telemetryLevel": "off",
	//Others
	"editor.suggestSelection": "first",
	"vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
	//Updates Disable
	"update.enableWindowsBackgroundUpdates": false,
	"update.mode": "none",
	"update.showReleaseNotes": false,
	//XML REDHAT
	"redhat.telemetry.enabled": false
}
